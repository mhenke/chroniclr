# GitHub Configuration (Required)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPOSITORY=owner/repo-name
GITHUB_OWNER=your-github-username

# AI Configuration (Built-in - No API keys required!)
# Chroniclr uses GitHub Models API with built-in GITHUB_TOKEN
# No additional AI API keys needed

# Chroniclr Settings
CHRONICLR_AUTO_GENERATE=true
CHRONICLR_CREATE_PR=true
CHRONICLR_AUTO_MERGE=false
CHRONICLR_OUTPUT_DIR=docs
CHRONICLR_BRANCH_PREFIX=docs/chroniclr-

# Optional: Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-domain.com/webhook

# Optional: Notification Settings
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here